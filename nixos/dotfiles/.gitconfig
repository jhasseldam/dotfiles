[user]
  name = Roman Kuznetsov
  email = roman@kuznero.com
[core]
  excludesfile = ~/.gitignore
  editor = vim
  autocrlf = input
[alias]
  st = status
  ci = commit
  co = checkout
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short --branches
  br = branch
  d = diff
  dt = difftool --diff-filter=ACMRTUXB --no-prompt
  dtp = difftool --diff-filter=ACMRTUXB --prompt
  m = merge
  mt = mergetool
  cl = clean -x -d -f --dry-run
  cls = clean -x -d -f
  pl = pull --prune --all
  ps = push
[color]
  ui = true
[diff]
  tool = diffuse
[difftool]
  prompt = false
[merge]
  tool = diffuse
[push]
  default = simple
